<p id="notice"><%= notice %></p>

<h1 class="mt-3">Все категории</h1>
<div class="album py-4">
  <div class="row">
    <% @books.each do |book| %>
      <div class="col-sm-6 col-md-4 col-lg-3">
        <div class="card mb-4 shadow-sm">
          <% if book.image.attached? %>
            <%= image_tag(book.image.variant(resize: "400x400"), class: "book-cover") %>
          <% else %>
            <div class="book-cover-ph">
              <%= content_tag(:span, "No cover page yet") %>
            </div>
          <% end %>
          <div class="card-body">
            <h5 class="card-title mb-0"><%= link_to(book.title, book_path(book)) %></h5>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <span class="small text-muted"><strong>Автор:</strong>
                <%= book.authors.collect { |a| a.name }.join(', ').html_safe %>
              </span>
            </li>
            <li class="list-group-item">
              <span class="small text-muted"><strong>Дата публикации:</strong>
                <%= book.published_at.strftime('%d.%m.%Y') %>
              </span>
            </li>
          </ul>
        </div>
      </div>
    <% end %>
  </div>
</div>

